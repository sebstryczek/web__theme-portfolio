{
  "name": "starter-theme",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "config": {
    "css-name": "style",
    "js-name": "scripts"
  },
  "scripts": {
    "postcss": "yarn postcss",
    "babel": "yarn babel",
    "uglifyjs": "yarn uglifyjs",
    "browser-sync": "yarn browser-sync",
    "test": "echo \"Error: no test specified\" && exit 1",
    "statics-dev-img": "[ -d ./src/assets/img/ ] && shx cp -r ./src/assets/img/ ./_dev-server/assets/img/ || echo './src/assets/img/ not found'",
    "statics-dev-libs": "[ -d ./src/libs/ ] && shx cp -r ./src/libs/ ./_dev-server/libs/ || echo './src/libs/ not found'",
    "statics-dev": "yarn statics-dev-img && yarn statics-dev-libs",
    "watch-css": "postcss --use postcss-import postcss-css-variables postcss-apply postcss-cssnext postcss-clean --watch --output ./_dev-server/assets/css/style.css ./src/assets/css/style.css --map",
    "watch-js": "watchify ./src/assets/js/index.js -t [ babelify --presets [ env ] ] -o ./_dev-server/assets/js/scripts.js",
    "sync": "browser-sync start --server --index ./src/index.html --serveStatic ./_dev-server/ --files ./src/index.html ./_dev-server/**/*.*",
    "prestart": "shx rm -rf ./_dev-server/ && shx mkdir -p ./_dev-server/assets/css/ && shx mkdir -p ./_dev-server/assets/js/ && yarn statics-dev",
    "start": "parallel watch-css watch-js sync",
    "statics-prod-img": "[ -d ./src/assets/img/ ] && shx cp -r ./src/assets/img/ ./build/assets/img/ || echo './src/assets/img/ not found'",
    "statics-prod-libs": "[ -d ./src/libs/ ] && shx cp -r ./src/libs/ ./build/libs/ || echo './src/libs/ not found'",
    "statics-prod-html": "[ -f ./src/index.html ] && shx cp -r ./src/index.html ./build/index.html || echo './src/index.html not found'",
    "statics-prod": "yarn statics-prod-img && yarn statics-prod-libs && yarn statics-prod-html",
    "build-css": "postcss --use postcss-import postcss-css-variables postcss-apply postcss-cssnext postcss-clean --output ./build/assets/css/style.css ./src/assets/css/style.css --no-map",
    "build-js": "browserify ./src/assets/js/index.js -t [ babelify --presets [ env ] ] | uglifyjs > ./build/assets/js/scripts.js",
    "prebuild": "shx rm -rf ./build/ && shx mkdir -p ./build/assets/css/ && shx mkdir -p ./build/assets/js/&& yarn statics-prod",
    "build": "yarn build-css && yarn build-js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.7",
    "browserify": "^16.3.0",
    "echo-cli": "^1.0.8",
    "npm-parallel": "^2.0.1",
    "postcss": "^8.2.10",
    "postcss-apply": "^0.12.0",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.1.3",
    "postcss-css-variables": "^0.13.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.0",
    "shx": "^0.3.2",
    "uglify-js": "^3.6.0",
    "watchify": "^3.11.1"
  }
}
